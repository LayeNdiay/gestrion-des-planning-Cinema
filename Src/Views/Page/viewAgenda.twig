      <tr>
        <th scope="col"></th>
        <th scope="col">Mardi</th>
        <th scope="col">Mercredi</th>
        <th scope="col">Jeudi</th>
        <th scope="col">Vendredi</th>
        <th scope="col">Samedi</th>
        <th scope="col">Dimanche</th>
      </tr>
    </thead>
    <tbody>
    {% for film in films %}
      
      <tr>
        <th scope="row">
          <div class="d-flex align-items-center flex-column">
             <img src="data:image/jpeg;base64,{{film.photo}}" height="100px" width="100%" style="object-fit: contain;" >
            <div>
              {{film.titre}}
            </div>
            <div>{{categorie[film.titre]}}  </div>
            <div><span class="ms-1 ps-1 pe-2   {% if publics[loop.index -1] == "Grand public" %} bg-warning {% else %} bg-danger  {% endif %} float-left" style="color:whitesmoke;" >{{ publics[loop.index -1] }} </span></div>
          </div>


        </th>
                 {% if diff["Mardi"][film.titre] == false %}
        <td></td>
        {% else %}
        <td>

          <div class="d-flex align-items-center flex-column">
            <div class="d-flex justify-content-between">
              <div class="bg-warning ps-2 pe-2 me-2">{{diff["Mardi"][film.titre]["Status"] }} </div>
             <a href="{{path_for("agenda.slug.diffusion",{'diffusion':diff["Mardi"][film.titre]["slug_diffusion"],'slugCinema':cinema.slug_cinema })}}"><img src="\crayon.svg" class="edit" width="20px" height="20px" ></a>
            </div>
            <div class="mt-2 font-weight-bold" style="font-weight: 200px;font-size: 20px;">{{diff["Mardi"][film.titre]["Debut"] }}</div>
            
            <div class="mt-2">
              {{salle["Mardi"][film.titre] }}
              <span class="mt-2" style="color: rgba(100, 220, 208, 0.808); font-size: 20px;"> {{diff["Mardi"][film.titre]["langue"] }}</span>
              <span style="color: rgba(100, 220, 208, 0.808); font-size: 20px;">{{diff["Mardi"][film.titre]["Qualite"] }}</span>
             </div>
            <div class="mt-2">Durrée <span class="ms-1 ps-1 pe-2  float-left"  >{{film.durre}}</span></div>

