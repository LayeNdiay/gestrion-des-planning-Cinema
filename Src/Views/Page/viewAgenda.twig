{% extends "layout.twig" %}
{% block content %}
<div class="bg-info px-5 d-flex justify-content-start" style="height: 100px;">
    <img src="data:image/jpeg;base64,{{cinema.logo}}" style="height: 100px; object-fit: contain;"   class=" img-responsive  rounded-circle" alt="">
    <h4 class="px-5 pt-4" > {{cinema.nom_cinema}}</h4>
</div>
  <style>
    td{
      width: 100px;
    }
    th{
      width: 200px;
    }
  </style>
